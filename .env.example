# =============================================================================
# Sage Discord Bot - Environment Configuration
# =============================================================================
# IMPORTANT: Never commit this file with real values!
# Copy to .env and fill in your actual values.
# =============================================================================

# -----------------------------------------------------------------------------
# Discord Configuration (REQUIRED)
# -----------------------------------------------------------------------------
DISCORD_TOKEN=YOUR_DISCORD_TOKEN_HERE
DISCORD_APP_ID=YOUR_APP_ID_HERE

# -----------------------------------------------------------------------------
# LLM Configuration
# -----------------------------------------------------------------------------
LLM_PROVIDER=pollinations
POLLINATIONS_BASE_URL=https://gen.pollinations.ai/v1
POLLINATIONS_MODEL=gemini
POLLINATIONS_API_KEY=YOUR_POLLINATIONS_KEY_HERE

# Profile Memory LLM Override (uses Gemini)
PROFILE_PROVIDER=pollinations
PROFILE_POLLINATIONS_MODEL=gemini

# Channel Summary Override (uses Gemini)
SUMMARY_PROVIDER=pollinations
SUMMARY_MODEL=gemini

# Formatter (uses Qwen Coder for reliable JSON)
FORMATTER_MODEL=qwen-coder

# -----------------------------------------------------------------------------
# Message Storage (Persistent Context)
# -----------------------------------------------------------------------------
MESSAGE_DB_STORAGE_ENABLED=true

# -----------------------------------------------------------------------------
# Database Configuration
# -----------------------------------------------------------------------------
DATABASE_URL="postgresql://postgres:password@localhost:5432/sage?schema=public"

# -----------------------------------------------------------------------------
# Bot Behavior
# -----------------------------------------------------------------------------
RATE_LIMIT_MAX=5
RATE_LIMIT_WINDOW_SEC=10
SERIOUS_MODE=false
AUTOPILOT_LEVEL=cautious
SILENCE_GRACE_SEC=60
LOG_LEVEL=info
ADMIN_USER_IDS=YOUR_ADMIN_ID_HERE
DEV_GUILD_ID=YOUR_DEV_GUILD_ID_HERE
