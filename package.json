{
  "name": "sage",
  "version": "1.0.0",
  "description": "An intelligent Discord bot with persistent memory, powered by Pollinations.ai. Remembers conversations, understands community relationships, and delivers personalized AI responses.",
  "main": "dist/index.js",
  "keywords": [
    "discord",
    "bot",
    "ai",
    "pollinations",
    "memory",
    "chatbot",
    "llm",
    "community"
  ],
  "scripts": {
    "dev": "nodemon --exec ts-node src/index.ts",
    "build": "tsc -p config/ci/tsconfig.json",
    "start": "node dist/index.js",
    "lint": "eslint src",
    "test": "vitest run -c config/ci/vitest.config.mjs",
    "release:check": "npm run lint && npm run build && npm run test && npm pack",
    "setup": "ts-node src/scripts/onboard.ts",
    "onboard": "ts-node src/scripts/onboard.ts",
    "db:migrate": "prisma migrate dev",
    "db:studio": "prisma studio",
    "doctor": "ts-node src/scripts/doctor.ts",
    "cert": "ts-node src/scripts/cert.ts",
    "prepack": "npm run build",
    "prepare": "husky install"
  },
  "author": "",
  "license": "ISC",
  "type": "commonjs",
  "dependencies": {
    "@discordjs/voice": "^0.19.0",
    "@prisma/client": "^5.22.0",
    "@snazzah/davey": "^0.1.9",
    "discord.js": "^14.25.1",
    "dotenv": "^17.2.3",
    "ffmpeg-static": "^5.3.0",
    "libsodium-wrappers": "^0.8.1",
    "opusscript": "^0.0.8",
    "pino": "^10.2.0",
    "pino-pretty": "^13.1.3",
    "prism-media": "^1.3.5",
    "zod": "^3.25.76",
    "zod-to-json-schema": "^3.25.1"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.2",
    "@types/node": "^25.0.9",
    "eslint": "^9.39.2",
    "globals": "^17.0.0",
    "husky": "^8.0.0",
    "nodemon": "^3.1.11",
    "prettier": "^3.8.0",
    "prisma": "^5.22.0",
    "ts-node": "^10.9.2",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.53.0",
    "vitest": "^4.0.17"
  }
}
